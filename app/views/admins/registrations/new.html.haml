.col-sm-offset-4.col-sm-4.col-xs-12
	%h2.text-center Sign up

= simple_form_for(resource, as: resource_name, :url => registration_path(resource_name), html: { class: "form" }) do |f|
	= devise_error_messages!
	.form-group
		= f.input :email, autofocus: true, class: "form-control"
	.form-group
		= f.input :password, autocomplete: "off", class: "form-control"
		- if @minimum_password_length
			%em
				(#{@minimum_password_length} characters minimum)
	.form-group
		= f.input :password_confirmation, autocomplete: "off", class: "form-control"

	= f.submit "Sign up", class: "btn btn-primary btn-lg"

= render "admins/shared/links"
