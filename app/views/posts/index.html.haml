- @posts.each do |post|
	.container
		= image_tag post.image_url.to_s
		%h1
			.text-center
				=link_to post.title, post
		.text-center
			=post.created_at.strftime('%b %d, %Y')
			%br
			Estimated reading time -
			= post.content.reading_time
		%p
			.text-center
				=raw(post.content).truncate(358)
		.text-center
			=link_to "Read more", post_path(post)
		- if admin_signed_in?
			.col-md-3.col-md-offset-10
				= link_to "Show", post_path(post), class: "btn btn-primary"
				= link_to "Edit", edit_post_path(post), class: "btn btn-default"
				= link_to "Delete", post_path(post), class: "btn btn-danger", method: :delete, data: { :confirm => "Are you sure?" }
